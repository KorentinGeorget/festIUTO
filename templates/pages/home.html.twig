{% extends "base.html.twig" %}

{% block body %}

{% for message in app.flashes('success') %}
    <div>
        {{ message }}
    </div>
{% endfor %}

<div>
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>Heure début</th>
                <th>Durée</th>
                <th>Lieu</th>
                <th>Type</th>
                <th>Groupe</th>
                <th>Payant</th>
            </tr>
        </thead>
        <tbody>
            {% for evenement in evenements %}
                <tr>
                    <td>{{ evenement.nom }}</td>
                    <td>{{ evenement.dateEv|date('d/m/Y') }}</td>
                    <td>{{ evenement.heureDebut|date('H:i') }}</td>
                    <td>{{ evenement.dureeEv|date('H:i') }}</td>
                    <td>{{ evenement.lieuEvent.adresse }}</td>
                    <td>{{ evenement.typeEvent.typeEvent }}</td>
                    <td>{{ evenement.groupe.nomGroupe }}</td>
                    <td>{{ evenement.isPayant ? "Payant" : "Gratuit" }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}