{% extends 'base.html.twig' %}

{% block title %}FestIUTO - Connexion{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/login.css') }}">{% endblock %}
{% block body %}

    <div class="container">
		<h1>Formulaire de connnexion</h1>

		<form action="{{ path('security.login') }}" method="post" name="login">
			<div class="form-group">
				<label for="username">Adresse email</label>
				<input type="email" id="username" name="_username" placeholder="exemple@symrecipe.fr" value={{ last_username }}>
			</div>
			<div class="form-group">
				<label for="password">Mot de passe</label>
				<input type="password" id="password" name="_password" placeholder="********">
			</div>

			<button type="submit">
				Se connecter
			</button>
		</form>
	</div>
{% endblock %}
